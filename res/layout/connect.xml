<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContentLinear"
    android:id="@+id/main_content">
    
	<LinearLayout
	    style="@style/ContentLinear"
	    android:background="@drawable/wrapper_content">
	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="250dip"
	        android:gravity="center">
		    <ImageView
		        android:contentDescription="@string/logoUtopic"
		        android:id="@+id/imageView1"
		        android:layout_width="136dip"
		        android:layout_height="88dip"
		        android:layout_marginTop="00dip"
		        android:src="@drawable/logo_utopic"/>
		</LinearLayout>
	    <TextView
	        style="@style/Texte"
	        android:text="@string/email:"
	        android:layout_marginBottom="3dip"/>
	    
	    <EditText
	        style="@style/TexteField"
	        android:inputType="textEmailAddress"
	        android:id="@+id/emailField"
	        android:layout_marginBottom="3dip"
	        android:text=""/>
	
	    <TextView
	        style="@style/Texte"
	        android:layout_marginBottom="3dip"
	        android:text="@string/password:"/>
	    
	    <EditText
	        style="@style/TexteField"
	        android:inputType="textPassword"
	        android:id="@+id/passwordField"
	        android:layout_marginBottom="3dip"
	        android:text=""/>
	     
	    <Button
	        style="@style/Button"
	        android:text="@string/connect"
	        android:layout_marginBottom="5dip"
	        android:onClick="goConnect"/>
	     
	    <Button
	        style="@style/Button"
	        android:text="@string/register" 
	        android:onClick="goRegister"/>
	</LinearLayout>
</ScrollView>