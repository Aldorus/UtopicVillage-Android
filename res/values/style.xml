<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaimLinear">
       	<item name="android:layout_width">match_parent</item>
       	<item name="android:layout_height">match_parent</item>
       	<item name="android:background">@color/background_color</item>
       	<item name="android:orientation">vertical</item>
    </style>
    <style name="headerActivity" parent="@android:style/Widget.TextView">
       	<item name="android:layout_width">wrap_content</item>
       	<item name="android:layout_height">match_parent</item>
       	<item name="android:textColor">@color/text_color</item>
       	<item name="android:gravity">center</item>
    </style>
   
    <style name="HeaderLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_header</item>
        <item name="android:background">@drawable/header_background</item>
<!--         <item name="android:padding">@dimen/margin_title</item> -->
    </style>
   
    <style name="MenuLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        
    </style>
   
    <style name="LinearElementMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_menu</item>
        <item name="android:background">@drawable/bouton_menu_state</item>
<!--         <item name="android:layout_margin">@dimen/margin_button_menu</item> -->
        <item name="android:layout_weight">3</item>
        <item name="android:orientation">horizontal</item>
    </style>
   
    <style name="ContentLinear">
        <item name="android:layout_width">match_parent</item>
       	<item name="android:layout_height">match_parent</item>
       	<item name="android:orientation">vertical</item>
       	<item name="android:layout_margin">@dimen/margin_text</item>
    </style>
    
    
    
    
    <style name="TexteForButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/text_color</item>
<!-- 		<item name="android:typeface">@font/trebuc</item> -->
        <item name="android:textSize">@dimen/font_size_menu</item>
    </style>
   
    <style name="Texte" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
    </style>
    <style name="TexteField" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
    </style>
    
    <style name="TexteCompact" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_text</item>
        <item name="android:layout_marginRight">@dimen/margin_text</item>
    </style>
    <style name="TexteFieldCompact" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dip</item>
        <item name="android:layout_marginLeft">@dimen/margin_text</item>
        <item name="android:layout_marginRight">@dimen/margin_text</item>
        <item name="android:layout_marginTop">@dimen/margin_button_high</item>
    </style>
    
    <style name="Texte2Compact" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_text</item>
        <item name="android:layout_marginRight">@dimen/margin_text</item>
    </style>
    <style name="TexteField2Compact" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_text</item>
        <item name="android:layout_marginRight">@dimen/margin_text</item>
        <item name="android:layout_marginTop">@dimen/margin_button_high</item>
    </style>
    
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bouton_state</item>
        <item name="android:layout_marginBottom">@dimen/margin_button_high</item>
        <item name="android:layout_marginRight">@dimen/margin_button_side</item>
        <item name="android:layout_marginLeft">@dimen/margin_button_side</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    
    <style name="TitleScreen" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
        <item name="android:textSize">@dimen/font_size_title_screen</item>
    </style>
</resources>